<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link rel="stylesheet" href="/public/css/style.css" />
  </head>
  <body>
    <nav>
      <div class="container">
        <ul class="menu">
          <li class="logo"><img src="/public/img/logo1.png" alt="logo" /></li>
          <li class="menu-item"><a href="/home">Home</a></li>
          <li class="menu-item"><a href="/about">About</a></li>
          <li class="menu-item">
            <a href="https://spoonacular.com/food-api" target="_blank">Api</a>
          </li>
          <li class="menu-item">
            <a href="https://www.linkedin.com/in/smullervidal/" target="_blank">Contact</a>
          </li>
        </ul>
      </div>
    </nav>

    
      <div class="container">
        <div class="row">
        <h1><%= recipe.title %></h1>
        <img src="<%= recipe.image %>" alt="<%= recipe.title %>" />

        <h2>Ingredients</h2>
        <ul>
          <% recipe.extendedIngredients.forEach(ingredient => { %>
          <li><%= ingredient.original %></li>
          <% }) %>
        </ul>
        <h2 class="title-ingredient" >Instruccion</h2>
        <ol class="list-recipes">
          <% recipe.analyzedInstructions[0].steps.forEach(step => { %>
          <li><%= step.step %></li>
          <% }) %>
        </ol>
        <button class="btn-back"><a href="/home">Home</a></button>
      </div>
      </div>
    
    <footer>
      <div class="container">
        <ul class="social-icons">
          <li>
            <a href="https://www.facebook.com/" target="_blank"><i class="fa-brands fa-facebook fa-2x"></i></a>
          </li>
          <li>
            <a href="https://twitter.com/" target="_blank"><i class="fa-brands fa-twitter fa-2x"></i></a>
          </li>
          <li>
            <a href="https://www.instagram.com/" target="_blank"><i class="fa-brands fa-instagram fa-2x"></i></a>
          </li>
        </ul>
      </div>
    </footer>
  </body>
</html>
